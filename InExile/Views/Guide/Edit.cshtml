@model InExile.Models.GuideEditModel
<div class="jumbotron">
    <h1>Edit @Model.Type Entry</h1>
    <p class="lead">Edit the fields below and click 'Submit'.</p>
</div>

<form class="form-horizontal" method="post" action="/Update/Edit" enctype="multipart/form-data">
    <fieldset>

        <div class="form-group">
            <input type="hidden" name="ID" id="ID" value="@Model.Dictionary["ID"]" />
            <input type="hidden" name="Type" id="Type" value="@Model.Type" />
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-2 control-label" for="name">Name</label>
            <div class="col-md-6">
                <input id="name" name="name" type="text" placeholder="" class="form-control input-md" required="" value="@Model.Dictionary["Name"]">
            </div>
        </div>

        @{
            if (Model.Type == "NPCs")
            {
                        <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="appearance">Appearance</label>
                    <div class="col-md-6">
                        <input id="appearance" name="appearance" type="text" placeholder="" value="@Model.Dictionary["Appearance"]" class="form-control input-md">
                    </div>
                </div>

                         <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="location">Location</label>
                    <div class="col-md-6">
                        <input id="location" name="location" type="text" placeholder="" value="@Model.Dictionary["Location"]" class="form-control input-md">
                    </div>
                </div>
            }

            if (Model.Type != "NPCs")
            {
                        <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="addInfo">Description</label>
                    <div class="col-md-6">
                        <textarea class="form-control" id="description" name="description">@Model.Dictionary["Description"]</textarea>
                    </div>
                </div>
            }
        }

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-2 control-label" for="additional">Additional Information</label>
            <div class="col-md-6">
                <textarea class="form-control" id="additional" name="additional">@Model.Dictionary["Additional"]</textarea>
            </div>
        </div>

        <!-- Image -->
        <div class="form-group">
            <label class="col-md-2 control-label" for="file">Image</label>
            <div class="col-md-6">
                <img src="@Url.Content(Model.Dictionary["Image"].ToString())" height="50%" width="50%" />
            </div>
        </div>

        <!-- File Upload -->
        <div class="form-group">
            <label class="col-md-2 control-label" for="file">Image Button</label>
            <div class="col-md-6">
                <input id="image" name="image" type="file">
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-2 control-label" for="submit">Create Entry</label>
            <div class="col-md-4">
                <button type="submit" value="Save" id="submit" name="submit" class="btn btn-success">Submit</button>
            </div>
        </div>

    </fieldset>
</form>
