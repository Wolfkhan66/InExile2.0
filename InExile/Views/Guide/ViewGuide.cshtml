@model InExile.Models.GuideViewModel
@using System.Data;

<head>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
</head>

<div class="jumbotron">
    <h1>@Model.Type</h1>
    <p class="lead">View and edit your entries below. To get started, click 'Create Entry'</p>
    <p><a href="/Update/Create?Type=NPC" class="btn btn-primary btn-lg">Create Entry &raquo;</a></p>
</div>

<style media="screen" type="text/css">
    table.dataTable tbody td {
        word-break: break-word;
        vertical-align: top;
    }
</style>

<div class="row">
    <div class="table-responsive">
        <table class="table table-striped table-bordered display" cellspacing="0" width="100%" id="contentTable">
            <thead>
                <tr>
                    @foreach (DataColumn col in Model.Table.Columns)
                    {
                        <th>@col.ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Table.Rows)
                {
                    <tr>
                        @foreach (DataColumn col in Model.Table.Columns)
                        {
                            <td>@row[col.ColumnName]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $('#contentTable').DataTable();
</script>
